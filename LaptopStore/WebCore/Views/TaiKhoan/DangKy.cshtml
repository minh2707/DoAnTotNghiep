
@{
    Layout = "~/Views/Shared/_DangNhapDangKyLayout.cshtml";
}
<div class="container" ng-controller="DangKyController">
        <div class="card card-register mx-auto mt-5">
            <div class="card-header">Đăng Ký Tài Khoản</div>
            <div class="card-body">
                <form name="frmDangKy">
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6" data-ng-class="{ 'has-error':(frmDangKy.ten.$touched && frmDangKy.ten.$error.required) }">
                                <label for="exampleInputName">Tên</label>
                                <input ng-model="taikhoan.ten" class="form-control" id="exampleInputName" name="ten" type="text" aria-describedby="nameHelp" placeholder="Nhập Tên" required>
                                <div data-ng-show="frmDangKy.ten.$touched && frmDangKy.ten.$error.required" class="help-block">
                                    <span data-ng-show="frmDangKy.ten.$error.required" class="text-danger"> <strong>Lỗi</strong> : <span>Nhập tên</span> !</span>
                                    <!--<span class="xpaas-error-message-color" data-ng-show="frmProject.name.$error.minlength"> <strong data-translate="ERROR">:</strong>Project name must be more than 3 words</span>-->
                                </div>
                            </div>
                            
                            <div class="col-md-6" data-ng-class="{ 'has-error':(frmDangKy.ho.$touched && frmDangKy.ho.$error.required) }">
                                <label for="exampleInputho">Họ</label>
                                <input class="form-control" ng-model="taikhoan.ho" id="exampleInputho" name="ho" type="text" aria-describedby="nameHelp" placeholder="Nhập Họ"required>
                                <div data-ng-show="frmDangKy.ho.$touched && frmDangKy.ho.$error.required" class="help-block">
                                    <span data-ng-show="frmDangKy.ho.$error.required" class="text-danger"> <strong>Lỗi</strong> : <span>Nhập Họ</span> !</span>
                                    <!--<span class="xpaas-error-message-color" data-ng-show="frmProject.name.$error.minlength"> <strong data-translate="ERROR">:</strong>Project name must be more than 3 words</span>-->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tài Khoản Email</label>
                        <input class="form-control" id="exampleInputEmail1" name="email" ng-model="taikhoan.email" type="email" aria-describedby="emailHelp" placeholder="Nhập Email" required>
                        <div data-ng-show="frmDangKy.email.$touched && frmDangKy.email.$error.required" class="help-block">
                            <span data-ng-show="frmDangKy.email.$error.required" class="text-danger"> <strong>Lỗi</strong> : <span>Nhập Email</span> !</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-6">
                                <label for="exampleInputPassword1">Mật Khẩu</label>
                                <input class="form-control" id="exampleInputPassword1" name="matkhau" ng-model="taikhoan.matkhau" type="password" placeholder="Mật Khẩu" minlength="6" required data-ng-change="kiemtramatkhau(taikhoan.matkhau)">
                                <div data-ng-show="frmDangKy.matkhau.$touched && frmDangKy.matkhau.$error.required || matkhausai || frmDangKy.password.$error.minlength" class="help-block">
                                    <span data-ng-show="frmDangKy.password.$error.minlength" class="text-danger"> <strong>Lỗi</strong> : <span>Mật Khẩu ít nhất 6 ký tự</span> !</span>
                                    <span data-ng-show="frmDangKy.password.$error.required" class="text-danger"> <strong>Lỗi</strong> : <span>Mật khẩu không được trống</span> !</span>
                                    <span data-ng-show="saimatkhau && !frmDangKy.password.$error.minlength" class="text-danger"> <strong>Lỗi</strong> : <span>
                                         Mật Khẩu phải chứa 1 chữ hoa, 1 chữ thường, 1 chữ số, 1 ký tự đặc biệt
                                             </span> !</span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label for="exampleConfirmPassword">Nhập Lại Mật Khẩu</label>
                                <input class="form-control" id="exampleConfirmPassword" ng-model="taikhoan.nhaplaimatkhau" type="password" placeholder="Nhập Lại Mật Khẩu" data-ng-change="sosanhmatkhau()" >
                                <div data-ng-show="nhaplaimatkhausai" class="help-block">
                                    <span data-ng-show="nhaplaimatkhausai" class="text-danger"> <strong>Lỗi</strong> : <span>Mật Khẩu Không Giống</span> !</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="btn btn-primary btn-block" data-ng-disabled="!frmDangKy.$valid || nhaplaimatkhausai == true || saimatkhau == true" ng-click="dangkytaikhoan(taikhoan)">Đăng Ký</button>
                </form>
                <div class="text-center">
                    <a class="d-block small mt-3" href="/TaiKhoan/DangNhap">Đăng Nhập</a>
                    <a class="d-block small" href="forgot-password.html">Quên Mật Khẩu</a>
                </div>
            </div>
        </div>
    </div>