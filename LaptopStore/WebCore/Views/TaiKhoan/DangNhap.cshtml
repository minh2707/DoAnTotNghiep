@{
    Layout = "~/Views/Shared/_DangNhapDangKyLayout.cshtml";
}

<div class="container" ng-controller="DangNhapController">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Đăng Nhập</div>
        <div class="card-body">
            <form>
                <div class="form-group">
                    <label for="exampleInputEmail1">Tài Khoản Email</label>
                    <input class="form-control" id="exampleInputEmail1" ng-model="taikhoan.email" type="email" aria-describedby="emailHelp" placeholder="Nhập Email">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mật Khẩu</label>
                    <input class="form-control" id="exampleInputPassword1" ng-model="taikhoan.matkhau" type="password" placeholder="Mật Khẩu">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox"> Ghi Nhớ Mật Khẩu
                        </label>
                    </div>
                </div>
                <button class="btn btn-primary btn-block" ng-click="dangnhap(taikhoan)">Đăng Nhập</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/TaiKhoan/DangKy">Đăng Ký</a>
                <a class="d-block small" href="forgot-password.html">Quên Mật Khẩu?</a>
            </div>
        </div>
    </div>
</div>

